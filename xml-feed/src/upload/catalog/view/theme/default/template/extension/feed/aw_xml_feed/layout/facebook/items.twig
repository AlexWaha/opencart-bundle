    {% for offer in offers%}
        {% if offer.option_size and offer.option_color %}
            {% for size in offer.option_size %}
                {% for color in offer.option_color %}
                    <item>
                        <g:id>{{offer.id}}-{{size.id}}-{{color.id}}</g:id>
                        <g:item_group_id>{{offer.id}}</g:item_group_id>
                        <g:title>{{offer.name}}</g:title>
                        <g:description>{{offer.description}}</g:description>
                        <g:link>{{offer.url}}</g:link>
                        <g:image_link>{{offer.image}}</g:image_link>
                        {% for image in offer.images %}
                            <g:additional_image_link>{{image}}</g:additional_image_link>
                        {% endfor %}
                        <g:brand>{{offer.vendor}}</g:brand>
                        <g:condition>{{offer.condition}}</g:condition>
                        {% if offer.google_product_category %}
                            <g:google_product_category>{{offer.google_product_category}}</g:google_product_category>
                        {% endif %}
                        <g:availability>{{offer.availability_status}}</g:availability>
                        {% if offer.availability_date %}
                            <g:availability_date>{{offer.availability_date}}</g:availability_date>
                        {% endif %}
                        {% if size.price %}
                            <g:price>{{size.price}} {{currency}}</g:price>
                            {% if offer.price != size.price %}
                                <g:sale_price>{{size.price}} {{currency}}</g:sale_price>
                            {% endif %}
                        {% else %}
                            {% if offer.special %}
                                <g:sale_price>{{offer.special}} {{currency}}</g:sale_price>
                                <g:price>{{offer.price}} {{currency}}</g:price>
                            {% else %}
                                <g:price>{{offer.price}} {{currency}}</g:price>
                            {% endif %}
                        {% endif %}
                        <g:size>{{size.name}}</g:size>
                        <g:color>{{color.name}}</g:color>
                        <g:shipping_weight>{{offer.weight}}</g:shipping_weight>
                        {% if offer.shipping %}
                            <g:shipping>
                                <g:country>{{shop_country}}</g:country>
                                <g:service>{{delivery_service}}</g:service>
                                <g:price>{{delivery_price}} {{currency}}</g:price>
                            </g:shipping>
                        {% endif %}
                        {% if warranty_text %}
                            <g:warranty>{{warranty_text}}</g:warranty>
                        {% endif %}
                    </item>
                {% endfor %}
            {% endfor %}
        {% else %}
            <item>
                <g:id>{{offer.id}}</g:id>
                <g:title>{{offer.name}}</g:title>
                <g:description>{{offer.description}}</g:description>
                <g:link>{{offer.url}}</g:link>
                <g:image_link>{{offer.image}}</g:image_link>
                {% for image in offer.images %}
                    <g:additional_image_link>{{image}}</g:additional_image_link>
                {% endfor %}
                <g:brand>{{offer.vendor}}</g:brand>
                <g:condition>{{offer.condition}}</g:condition>
                {% if offer.google_product_category %}
                    <g:google_product_category>{{offer.google_product_category}}</g:google_product_category>
                {% endif %}
                <g:availability>{{offer.availability_status}}</g:availability>
                {% if offer.availability_date %}
                    <g:availability_date>{{offer.availability_date}}</g:availability_date>
                {% endif %}
                {% if offer.special %}
                    <g:sale_price>{{offer.special}} {{currency}}</g:sale_price>
                    <g:price>{{offer.price}} {{currency}}</g:price>
                {% else %}
                    <g:price>{{offer.price}} {{currency}}</g:price>
                {% endif %}
                {% if offer.option_size %}
                    {% for size in offer.option_size %}
                        <g:size>{{size.name}}</g:size>
                    {% endfor %}
                {% endif %}
                {% if offer.option_color %}
                    {% for color in offer.option_color %}
                        <g:color>{{color.name}}</g:color>
                    {% endfor %}
                {% endif %}
                <g:shipping_weight>{{offer.weight}}</g:shipping_weight>
                {% if offer.shipping %}
                    <g:shipping>
                        <g:country>{{shop_country}}</g:country>
                        <g:service>{{delivery_service}}</g:service>
                        <g:price>{{delivery_price}} {{currency}}</g:price>
                    </g:shipping>
                {% endif %}
                {% if warranty_text %}
                    <g:warranty>{{warranty_text}}</g:warranty>
                {% endif %}
            </item>
        {% endif %}
    {% endfor %}