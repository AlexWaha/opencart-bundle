                                <thead>
                                <tr>
                                    <td width="200px" class="left">{{ column_tag }}</td>
                                    <td>{{ column_descrition }}</td>
                                </tr>
                                </thead>
                                <tbody>
                                <tr>
                                    <td class="left"><code>{{ '{{' }}date{{ '}}' }}</code></td>
                                    <td>{{ tag_date }}</td>
                                </tr>
                                <tr>
                                    <td class="left"><code>{{ '{{' }}url{{ '}}' }}</code></td>
                                    <td>{{ tag_url }}</td>
                                </tr>
                                <tr>
                                    <td class="left"><code>{{ '{{' }}currency{{ '}}' }}</code></td>
                                    <td>{{ tag_currency }}</td>
                                </tr>
                                <tr>
                                    <td class="left"><code>{{ '{{' }}categories{{ '}}' }}</code></td>
                                    <td>{{ tag_categories }}</td>
                                </tr>
                                <tr>
                                    <td class="left"><code>{{ '{{' }}category{{ '}}' }}</code></td>
                                    <td>{{ tag_category }}</td>
                                </tr>
                                <tr>
                                    <td class="left"><code>{{ '{{' }}category.id{{ '}}' }}</code></td>
                                    <td>{{ tag_category_id }}</td>
                                </tr>
                                <tr>
                                    <td class="left"><code>{{ '{{' }}category.parent_id{{ '}}' }}</code></td>
                                    <td>{{ tag_category_parent }}</td>
                                </tr>
                                <tr>
                                    <td class="left"><code>{{ '{{' }}category.name{{ '}}' }}</code></td>
                                    <td>{{ tag_category_name }}</td>
                                </tr>
                                <tr>
                                    <td class="left"><code>{{ '{{' }}pages{{ '}}' }}</code></td>
                                    <td>{{ tag_pages }}</td>
                                </tr>
                                <tr>
                                    <td class="left"><code>{{ '{{' }}page{{ '}}' }}</code></td>
                                    <td>{{ tag_page }}</td>
                                </tr>
                                <tr>
                                    <td class="left"><code>{{ '{{' }}page.offers{{ '}}' }}</code></td>
                                    <td>{{ tag_products }}</td>
                                </tr>
                                <tr>
                                    <td class="left"><code>{{ '{{' }}offer{{ '}}' }}</code></td>
                                    <td>{{ tag_product }}</td>
                                </tr>
                                <tr>
                                    <td class="left"><code>{{ '{{' }}offer.id{{ '}}' }}</code></td>
                                    <td>{{ tag_product_id }}</td>
                                </tr>
                                <tr>
                                    <td class="left"><code>{{ '{{' }}offer.url{{ '}}' }}</code></td>
                                    <td>{{ tag_product_url }}</td>
                                </tr>
                                <tr>
