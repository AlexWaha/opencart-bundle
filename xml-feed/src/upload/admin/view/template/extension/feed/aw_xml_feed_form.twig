                                <div class="col-sm-12 text-left">
                                    <h4>{{ entry_attribute }}</h4>
                                </div>
                                <div class="col-sm-12">
                                    <div class="well well-sm" style="min-height: 150px;max-height: 350px;overflow: auto;">
                                        <table class="table table-striped">
                                            {% for attribute in attributes %}
                                                <tr>
                                                    <td class="checkbox">
                                                        <label>
                                                            <input type="checkbox"
                                                                   name="setting[attribute_list][]"
                                                                   value="{{ attribute.attribute_id }}"
                                                                    {{ attribute.attribute_id in attribute_list ? 'checked' }}
                                                            /> {{ attribute.name }}
                                                        </label>
                                                    </td>
                                                </tr>
                                            {% endfor %}
                                        </table>
                                    </div>
                                    <a onclick="$(this).parent().find(':checkbox').prop('checked', true);">{{ text_select_all }}</a> /
                                    <a onclick="$(this).parent().find(':checkbox').prop('checked', false);">{{ text_unselect_all }}</a>
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="col-sm-2 control-label">{{ entry_attribute_warranty }}</label>
                                <div class="col-sm-10">
                                    <select name="setting[attribute_warranty]" id="input-attribute-warranty" class="form-control">
                                        <option value="0">{{ text_none }}</option>
                                        {% for attribute in attributes %}
                                            <option value="{{ attribute.attribute_id }}" {{ attribute.attribute_id == attribute_warranty ? 'selected' }}>
                                                {{ attribute.name }}
                                            </option>
                                        {% endfor %}
                                    </select>
                                    <div class="alert alert-info">{{ help_attribute_warranty }}</div>
                                </div>
                            </div>
                        </div>
                        <div class="tab-pane" id="tab-options">
                            <div class="form-group">
                                <div class="col-sm-12 text-left">
                                    <h4>{{ entry_option }}</h4>
                                </div>
                                <div class="col-sm-12">
                                    <div class="well well-sm" style="min-height: 150px;max-height: 350px;overflow: auto;">
                                        <table class="table table-striped">
                                            {% for option in options %}
                                                <tr>
                                                    <td class="checkbox">
                                                        <label>
                                                            <input type="checkbox"
                                                                   name="setting[option_list][]"
                                                                   value="{{ option.option_id }}"
                                                                    {{ option.option_id in option_list ? 'checked' }}
                                                            />
                                                            {{ option.name }}
                                                        </label>
                                                    </td>
                                                </tr>
                                            {% endfor %}
                                        </table>
                                    </div>
                                    <a onclick="$(this).parent().find(':checkbox').prop('checked', true);">{{ text_select_all }}</a> /
                                    <a onclick="$(this).parent().find(':checkbox').prop('checked', false);">{{ text_unselect_all }}</a>
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="col-sm-2 control-label">{{ entry_option_color }}</label>
                                <div class="col-sm-4">
                                    <select name="setting[option_color]" id="input-option-color" class="form-control">
                                        <option value="0">{{ text_none }}</option>
                                        {% for option in options %}
                                            <option value="{{ option.option_id }}" {{ option.option_id == option_color ? 'selected' }}>
                                                {{ option.name }}
                                            </option>
                                        {% endfor %}
                                    </select>
                                </div>
                                <label class="col-sm-2 control-label">{{ entry_option_size }}</label>
                                <div class="col-sm-4">
                                    <select name="setting[option_size]" id="input-option-size" class="form-control">
                                        <option value="0">{{ text_none }}</option>
                                        {% for option in options %}
                                            <option value="{{ option.option_id }}" {{ option.option_id == option_size ? 'selected' }}>
                                                {{ option.name }}
                                            </option>
                                        {% endfor %}
                                    </select>
                                </div>
                            </div>
                        </div>
                        <div class="tab-pane" id="tab-tags">
                            {{ text_tags_info }}
