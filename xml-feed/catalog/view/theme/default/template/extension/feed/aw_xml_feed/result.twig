<!DOCTYPE html>
<html>
<head>
    <title>XML Feed Generation Results</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
    <div class="container mt-4">
        <h2 class="text-primary mb-4">XML Feed Generation Results</h2>

        {% if generated_feeds %}
            <div class="alert alert-success">
                <i class="bi bi-check-circle-fill"></i> {{ language.get('text_all_feeds_generated') }}
            </div>

            <div class="row">
                {% for feed in generated_feeds %}
                <div class="col-md-6 mb-3">
                    <div class="card border-success">
                        <div class="card-body">
                            <h6 class="card-title text-success">Feed ID: {{ feed.id }}</h6>
                            <p class="card-text">
                                <strong>Template:</strong> <span class="badge bg-info">{{ feed.template }}</span><br>
                                <strong>URL:</strong> <a href="{{ feed.url }}" target="_blank" class="text-decoration-none">{{ feed.url }}</a>
                            </p>
                        </div>
                    </div>
                </div>
                {% endfor %}
            </div>
        {% else %}
            <div class="alert alert-warning">
                <i class="bi bi-exclamation-triangle-fill"></i> {{ language.get('text_no_active_feeds') }}
            </div>
        {% endif %}
    </div>
</body>
</html>