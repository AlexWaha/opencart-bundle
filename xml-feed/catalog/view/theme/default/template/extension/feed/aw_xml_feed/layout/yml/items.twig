            {% for offer in offers%}
                {% if offer.option_size and offer.option_color %}
                    {% for option in offer.option_size %}
                        {% for color in offer.option_color %}
                            <offer available="true" id="{{offer.id}}-{{option.id}}-{{color.id}}">
                                <url>{{offer.url}} </url>
                                {% if option.price %}
                                    <price>{{option.price}}</price>
                                    <oldprice>{{offer.price}}</oldprice>
                                {% else %}
                                    <price>{{option.price}}</price>
                                {% endif %}
                                <currencyId>{{currency}}</currencyId>
                                <categoryId>{{offer.category_id}}</categoryId>
                                <name>{{offer.name}}</name>
                                <description>{{offer.description}}</description>
                                <model>{{offer.model}}</model>
                                <vendor>{{offer.vendor}}</vendor>
                                {% if offer.vendorCode %}<vendorCode>{{offer.vendorCode}}</vendorCode>{% endif %}
                                {% if offer.shipping %}<delivery-options><option days="{{offer.shipping}}"/></delivery-options>{% endif %}
                                {% if offer.weight %}<weight>{{offer.weight}}</weight>{% endif %}
                                {% for image in offer.image %}
                                    <picture>{{image}}</picture>
                                {% endfor %}
                                {% for attribute in offer.attributes %}
                                    <param name="{{attribute.name}}">{{attribute.value}}</param>
                                {% endfor %}
                                {% for option in offer.options %}
                                    <param name="{{option.group}}">{{option.name}}</param>
                                {% endfor %}
                                <param name="{{color.group}}">{{color.name}}</param>
                                <param name="{{option.group}}">{{option.name}}</param>
                            </offer>
                        {% endfor %}
                    {% endfor %}
                {% else %}
                    <offer available="true" id="{{offer.id}}">
                        <url>{{offer.url}} </url>
                        {% if offer.special %}
                            <price>{{offer.special}}</price>
                            <oldprice>{{offer.price}}</oldprice>
                        {% else %}
                            <price>{{offer.price}}</price>
                        {% endif %}
                        <currencyId>{{currency}}</currencyId>
                        <categoryId>{{offer.category_id}}</categoryId>
                        <name>{{offer.name}}</name>
                        <description>{{offer.description}}</description>
                        <model>{{offer.model}}</model>
                        <vendor>{{offer.vendor}}</vendor>
                        {% if offer.vendorCode %}<vendorCode>{{offer.vendorCode}}</vendorCode>{% endif %}
                        {% if offer.shipping %}<delivery-options><option days="{{offer.shipping}}"/></delivery-options>{% endif %}
                        {% if offer.weight %}<weight>{{offer.weight}}</weight>{% endif %}
                        <picture>{{offer.image}}</picture>
                        {% for image in offer.images %}
                            <picture>{{image}}</picture>
                        {% endfor %}
                        {% for attribute in offer.attributes %}
                            <param name="{{attribute.name}}">{{attribute.value}}</param>
                        {% endfor %}
                        {% for option in offer.options %}
                            <param name="{{option.group}}">{{option.name}}</param>
                        {% endfor %}
                    </offer>
                {% endif %}
            {% endfor %}