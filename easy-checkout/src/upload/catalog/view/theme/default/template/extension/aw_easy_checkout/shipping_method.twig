<div class="checkout-shipping-method">
	<div class="checkout-title">{{ title_shipping_method }}</div>
	{% if error_warning %}
		<div class="alert alert-warning">
            <i class="aw-icon aw-icon-error"></i>
            {{ error_warning }}</div>
	{% endif %}
	<div class="shipping-method">
		{% for shipping_method in shippingMethods %}
			<div class="shipping_method_title">
				{{ shipping_method.title }}
			</div>
			{% if (not shipping_method.error) %}
				{% for quote in shipping_method.quote %}
					<div class="radio checkout-radio">
						<label>
							{% if (quote.code == shipping_code or not shipping_code) %}
								{% set shipping_code = quote.code %}
								<input type="radio" name="shipping_method" value="{{ quote.code }}" checked="checked" />
							{% else %}
								<input type="radio" name="shipping_method" value="{{ quote.code }}" />
							{% endif %}
							{% if quote.image is defined %}<img class="img-responsive" style="display:inline-block;margin-right:3px;" width="{{ quote.image_width }}" height="{{ quote.image_height }}" src="{{ quote.image }}">{% endif %}
							{{ quote.title }}
							{% if quote.text is not empty %} - {{ quote.text }}{% endif %}
						</label>
					</div>
				{% endfor %}
			{% else %}
				<div class="alert alert-danger">{{ shipping_method.error }}</div>
			{% endif %}
		{% endfor %}
	</div>
</div>
